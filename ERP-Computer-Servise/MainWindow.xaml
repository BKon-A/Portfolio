        <Label Content="Логін:" HorizontalAlignment="Left" Margin="298,155,0,0" VerticalAlignment="Top" Foreground="#FFAD42AC" FontSize="20" FontWeight="Bold"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="298,203,0,0" VerticalAlignment="Top" Foreground="#FFAD42AC" FontSize="20" FontWeight="Bold"/>
        <Button Content="Вхід" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" FontSize="20" Click="ButtonEnter_Click" Width="68" RenderTransformOrigin="0.856,0.517"/>
    </Grid>
</Window>
