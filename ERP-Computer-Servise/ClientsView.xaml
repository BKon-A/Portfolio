<Window x:Class="DBO_AWP_Computer_Service_Director.ClientsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBO_AWP_Computer_Service_Director"
        mc:Ignorable="d"
        Title="ClientsView" Height="450" Width="800">
    <Grid>
        <Label Content="Клієнт" HorizontalAlignment="Left" Margin="67,67,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="Відобразити інформацію" HorizontalAlignment="Left" Margin="83,156,0,0" VerticalAlignment="Top" FontSize="16" Click="Button_ClickShowInfo" Height="37" Width="195"/>
        <ComboBox Name="ComboBoxClients" HorizontalAlignment="Left" VerticalAlignment="Top" Width="146" Height="22" MaxWidth="200" Margin="144,76,0,0"/>
        <ListBox x:Name="ListBoxClients" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="355,10,10,10" Height="414" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="False" Width="435"/>

    </Grid>
</Window>
